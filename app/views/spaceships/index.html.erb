<div class="content-search-page">
  <div class="search-section">
  <%= form_tag spaceships_path, method: :get do %>
  <%= select_tag :planet, options_for_select(["", "Alderaan", "Caamas", "Corellia", "Coruscant", "Dagobah", "Elom", "Hoth", "Mustafar", "Kamino", "Ryloth", "Tatooine", "Zonama", "Sekot" ]) %>
  <%= select_tag :category, options_for_select(["", "Espace", "Air", "Aquatique", "Terrestre"]) %>
  <%= submit_tag "Rechercher" %>



<% end %>


  </div>

  <div class="content-result">
    <div class="row">
      <div class="col-md-6 content-list">
        <% @spaceships_all.each do |spaceship| %>
          <div class="card-index" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path spaceship.photo %>);">
            <div class="card-category"><%= spaceship.category %></div>
            <div class="card-description">
              <h2><%= spaceship.name %></h2>
              <p><%= spaceship.seats %> <%= spaceship.planet %></p>
            </div>

            <a class="card-link" href="#" ></a>
          </div>
        <% end %>
      </div>
      <div class="col-md-6 content-map">
        <%= image_tag 'space-test.jpg', class: 'image-map' %>
      </div>
    </div>
  </div>
</div>


