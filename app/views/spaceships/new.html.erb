<div class="container">
  <div class="row">
    <h1>Create a new Spaceship</h1>
    <div class="col-md-4 col-md-offset-4">
      <%= simple_form_for(@spaceship) do |f| %>
        <%= f.input :name %>
        <%= f.input :category %>
        <%= f.input :power %>
        <%= f.input :seats %>
        <%= f.input :constructor %>
        <%= f.input :weapons %>
        <%= f.input :maxspeed %>
        <%= f.input :size %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
