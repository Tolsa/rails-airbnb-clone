<div class="container full-height">
  <div class="row">
     <div class="col-xs-12 col-sm-4 col-sm-offset-4 sign-up-form">


      <div class="form-login">

        <h2>Connexion</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, placeholder: "dark@vador.com" %>
            <%= f.input :password, required: false, placeholder: "••••••", label: "Mot de passe" %>
            <%= f.input :remember_me, label: "Se souvenir de mon compte", as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Se connecter", class: "btn btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


