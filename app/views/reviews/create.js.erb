// On veut ajouter une review
// On veut cleaner le formulaire (l'input)

<% if @review.errors.any? %>
  const newReviewForm = document.getElementById('new_review');
  newReviewForm.innerHTML = "<%= j render 'reviews/form', spaceship: @spaceship, review: @review %>";
<% else %>
  const newReviewForm = document.getElementById('new_review');
  const reviews = document.getElementById('reviews');
  reviews.insertAdjacentHTML("beforeend", "<%= j render 'reviews/show', review: @review %>");
  newReviewForm.innerHTML = "<%= j render 'reviews/form', spaceship: @spaceship, review: Review.new %>";
<% end %>
